
 CREATE DATABASE IF NOT EXISTS EMPDB;
USE EMPDB;
 CREATE TABLE IF NOT EXISTS EMP_TABLE(E_ID int, NAME String, SALARY String, DESIGNATION String) ROW FORMAT DELIMITED FIELDS TERMINATED BY '\t';
 INSERT INTO EMP_TABLE(E_ID,NAME)VALUES(101,'ABHI');
 SELECT * FROM EMP_TABLE;
 SELECT * FROM EMP_TABLE WHERE SALARY > '30000';
 ALTER TABLE EMP_TABLE ADD COLUMNS(DEPT_ID int COMMENT 'Department Id');
 LOAD DATA LOCAL INPATH '/home/hduser/sample.txt' OVERWRITE INTO TABLE EMP_TABLE;
 SELECT * FROM EMP_TABLE ORDER BY DEPT_ID;
 SELECT DEPT_ID, COUNT(*) FROM EMP_TABLE WHERE SALARY>'30000' GROUP BY DEPT_ID;
 CREATE TABLE DEP_TABLE(DEPT_ID int, DEPT_NAME String, EMP_ID int) ROW FORMAT DELIMITED FIELDS TERMINATED BY '\t';
 SELECT E.E_ID, E.NAME, E.DESIGNATION, D.DEPT_ID, D.DEPT_NAME FROM EMP_TABLE E JOINS DEP_TABLE ON (E.E_ID = D.EMP_ID);
